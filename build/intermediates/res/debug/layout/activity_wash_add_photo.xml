<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/wash_add_photo_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_car_wash_add_photo" />

        <TextView
            android:id="@+id/wash_add_photo_explain"
            style="@style/TextWhiteNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:text="请拍下洗车前的照片"
            />


        <Button
            android:id="@+id/wash_add_photo_ok"
            style="@style/TextBlackLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_single"
            android:text="提交"
            android:textColor="@color/btn_text_color" />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/Workspace6/SplashActivity/res/layout/activity_wash_add_photo.xml -->