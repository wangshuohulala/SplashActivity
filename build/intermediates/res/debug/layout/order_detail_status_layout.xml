<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/order_detail_finish_layout"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/order_detail_finish_name"
            style="@style/TextWhiteSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="洗车完成" />

        <TextView
            android:id="@+id/order_detail_finish_date"
            style="@style/TextWhiteSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="201598" />

        <ImageView
            android:id="@+id/order_detail_finish_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true" />
        
         <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />
    </LinearLayout>

   

    <LinearLayout
         android:layout_marginTop="20dp"
        android:id="@+id/order_detail_start_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/order_detail_start_name"
            style="@style/TextWhiteSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始洗车" />

        <TextView
            android:id="@+id/order_detail_start_date"
            style="@style/TextWhiteSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="201598" />

        <ImageView
            android:id="@+id/order_detail_start_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />
    </LinearLayout>


    <LinearLayout
         android:layout_marginTop="20dp"
        android:id="@+id/order_detail_accept_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/order_detail_accept_name"
            style="@style/TextWhiteSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已接单" />

        <TextView
            android:id="@+id/order_detail_accept_date"
            style="@style/TextWhiteSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="201598" /><TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

    </LinearLayout>


