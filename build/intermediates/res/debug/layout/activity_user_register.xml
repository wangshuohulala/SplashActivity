<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp" >

            <EditText
                android:id="@+id/user_login_phone"
                style="@style/TextWhiteNormal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:hint="手机号"
                android:paddingLeft="5dp"
                android:textColorHint="#f2ffffff"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaffffff" />

            <EditText
                android:id="@+id/user_login_verification_code"
                style="@style/TextWhiteNormal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:hint="验证码"
                android:paddingLeft="5dp"
                android:textColorHint="#f2ffffff"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaffffff" />

            <com.haomi.mantou.view.VerificationButton
                android:id="@+id/user_login_get_verification_code"
                style="@style/TextWhiteNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:onClick="onClick"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:textColor="@color/cyan" />
            
            <EditText
                android:id="@+id/user_login_referrer_phone"
                style="@style/TextWhiteNormal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:hint="推荐人手机号"
                android:paddingLeft="5dp"
                android:textColorHint="#f2ffffff"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaffffff" />
        </LinearLayout>

        <Button
            android:id="@+id/user_login_next"
            style="@style/TextBlackLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_single"
            android:text="下一步"
            android:textColor="@color/btn_text_color" />

        <TextView
            android:id="@+id/user_login_go_login"
            style="@style/TextWhiteNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="我已有帐号，去登录 "
            android:textColor="#70a0e2" />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/Workspace6/SplashActivity/res/layout/activity_user_register.xml -->